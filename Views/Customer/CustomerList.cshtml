@using Northwind.Models
@model IEnumerable<Customer>

    
<table class="table w-auto table-bordered table-hover">
    <thead>
        <tr>
        <th scope="col-auto">Customer ID</th>
        <th scope="col-auto" align="left">Company Name</th>
        <th scope="col-auto" align="left">City</th>
        <th scope="col-auto" align="left">Country</th>
        <th scope="col-auto" align="right">Postal Code</th>
        <th scope="col-auto" align="left">Phone</th>
        </tr>
    </thead>
    <tbody>
      @foreach (Customer c in Model){
        <tr>
            <th scope="row">@c.CustomerId</th>
            <td align="left">@c.CompanyName</td>
            <td align="left">@c.City</td>
            <td align="left">@c.Country</td>
            <td align="right">@c.PostalCode</td>
            <td align="left">@c.Phone</td>
            //<td><a asp-action="DeleteCustomer" asp-route-id="@c.CustomerId" style="border:0">Delete</a></td> 
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            <td><a asp-action="DeleteCustomer" asp-route-id="@c.CustomerId" style="border:0">Delete</a></td>
        </tr>
      }
    </tbody>
</table>
        